# ─── Supabase ──────────────────────────────────────────────────────────────────
# Found in: Supabase Dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Direct Postgres connection string (for Drizzle migrations)
# Found in: Supabase Dashboard → Project Settings → Database → Connection string (URI)
# Use the "Transaction" pooler URL for serverless (port 6543)
# Use the "Direct" URL for migrations (port 5432)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
DATABASE_URL_POOLER=postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# ─── Stripe ───────────────────────────────────────────────────────────────────
# Found in: Stripe Dashboard → Developers → API keys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe price IDs — create products in Stripe Dashboard first
STRIPE_PRICE_READER_MONTHLY=price_...
STRIPE_PRICE_READER_ANNUAL=price_...
STRIPE_PRICE_BIBLIOPHILE_MONTHLY=price_...
STRIPE_PRICE_BIBLIOPHILE_ANNUAL=price_...

# ─── Google Books API ─────────────────────────────────────────────────────────
# Found in: Google Cloud Console → APIs & Services → Credentials
GOOGLE_BOOKS_API_KEY=AIza...

# ─── Resend ───────────────────────────────────────────────────────────────────
# Found in: resend.com → API Keys
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@readrise.app

# ─── Sentry ───────────────────────────────────────────────────────────────────
# Found in: sentry.io → Project Settings → Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://...@o0.ingest.sentry.io/0
SENTRY_ORG=your-org
SENTRY_PROJECT=readrise-web
SENTRY_AUTH_TOKEN=sntrys_...

# ─── PostHog ──────────────────────────────────────────────────────────────────
# Found in: posthog.com → Project Settings
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ─── Upstash Redis ────────────────────────────────────────────────────────────
# Found in: console.upstash.com → Your Redis Database → REST API
UPSTASH_REDIS_REST_URL=https://...upstash.io
UPSTASH_REDIS_REST_TOKEN=...

# ─── App ──────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
